
public class Timer
{
    private double millisecond;
    private int stamp;
    private boolean counting = false;
    
    public Timer()
    {
        millisecond = 0;
    }
    
    public void count()
    {
        millisecond += 50;
    }
    
    public int getMillisecond()
    {
        return (int) millisecond;
    }
    
    public int getSecond()
    {
        return (int) millisecond / 1000;
    }
    
    public void reset()
    {
        millisecond = 0;
    }
    
    public void saveTime()
    {
        stamp = getSecond();
    }
    
    public int getSavedTime()
    {
        return stamp;
    }
    
    public void start()
    {
        counting = true;
    }
    
    public void stop()
    {
        counting = false;
    }
    
    public boolean isCounting()
    {
        return counting;
    }
}
