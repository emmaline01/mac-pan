
public class Timer
{
    private int millisecond;
    private int targetTime;
    private int savedTarget;
    private boolean counting;
    
    public Timer()
    {
        reset();
    }
    
    public void count()
    {
        if (targetTime > 0) // counting
        {
            millisecond += 30;
        }
    }

    public void reset()
    {
        millisecond = 0;
        targetTime = 0;
        counting = false;
    }
    
    // start timer with target seconds
    public void start(int target)
    {
        targetTime = target * 1400;
        counting = true;
    }

    public boolean isTimeUp()
    {
        return (millisecond >= targetTime);
    }
    
    public int getSecond()
    {
        return millisecond / 1400;
    }
    
    public void saveTime()
    {
        savedTarget = targetTime / 1400;
        counting = false;
    }
    
    public int getSavedTarget()
    {
        return savedTarget;
    }
    
    public boolean isCounting()
    {
        return counting;
    }
}
