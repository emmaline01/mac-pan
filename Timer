
public class Timer
{
    double millisecond;
    double second;
    
    public Timer()
    {
        millisecond = 0;
        second = 0;
    }
    
    public void count()
    {
        millisecond++;
        second += millisecond / 990;
    }
    
    public int getMillisecond()
    {
        return (int) millisecond;
    }
    
    public int getSecond()
    {
        return (int) second;
    }
}
